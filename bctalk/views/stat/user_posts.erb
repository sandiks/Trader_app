<table class="msgTable" style="width:80%;">
	<tbody>
		
		<% @posts.group_by{|h| h[:tid]}.each do |tid, thread_posts| %>
		<tr style="vertical-align:top">
			<td class="msgBody">
				<span onclick="$(this).next().toggle();"><a class="Clicable"><%= @threads[tid]||tid %> </a> <%=thread_posts.size.to_s %></span>
				<div style="display: none; cursor: default; border: 1px solid blue;">
					
					<% thread_posts.each do |item| %>
					<table class="msgTable">
						<tbody>
							<tr>
								<td id="id<%= item.mid %>" class="messageHeader" colspan="2"><img src="/images/message.gif" alt=""><%= @threads[item.tid] %>
								</td>
							</tr>
							<tr style="vertical-align:top">
								<td style="width:15%" class="msgBody">
									<a href="https://bitcointalk.org/index.php?action=profile;u=<%= item.addeduid %>" class="addedby">
									<%= item.addedby %> </a><br>
									
								</td>
								<td class="msgBody"><%= item.body.html_safe %></td>
							</tr>
							<tr>
								<td colspan=2 class="msgFooter"><%= item.addeddate.strftime("%F %k:%M ") %> 
									<a href='<%= "/bctalk/thread/#{item.tid}/p/#{item.pnum}" %>'>orig</a>
							| </td>
							
						</tr>
					</tbody>
				</table>
				<% end %>
			</div>
		</td>
	</tr>
	<% end %>
	
	
</tbody>
</table>